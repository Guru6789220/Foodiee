<style type="text/css">
    .logos {
        border-radius: 50%;
        width: 70px;
        height: 70px;
    }

    .table th{
        border:1px solid white;
        position:sticky;top:0;
    }
    .table td{
        border:1px solid lightgray;
    }

    .custombutton{
        font-size:20px;
    }
    .card{
        border:1px solid white;
    }
</style>

<div class="container-fluid">
    <div class="card shadow-sm ">
        <div class="card-header">
            <div class="row">
            <div class="col-lg-12 d-inline-flex justify-content-between"><h3 class="display-3 px-3">List of Brand's...</h3>
                    <a class="btn btn-primary" asp-action="AddBrand" asp-controller="Sellers"><i class="bi bi-plus-circle"></i> New Brand</a>
            </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div style="height:auto;max-height:100%;overflow:auto;width:100%;">
                        
                            <table id="brandtable" class="table table-bordred table-striped text-center">
                                <thead class="table-dark text-center">
                                    <th style ="width:10%;"></th>
                                    <th style="width:10%;">Brand Name</th>
                                    <th>Brand Description</th>
                                    <th>Created Date</th>
                                    <th></th>
                                    <th></th>
                                </thead>
                                <tbody>
                                @if(ViewBag.BrandDetails != null)
                                {
                                    foreach (var item in ViewBag.BrandDetails)
                                    {
                                        <tr>
                                            <td><img src='@item.BrandLogo' alt="Not Found" class="logos shadow-lg" /></td>
                                            <td><b><i>@item.BrandName</i></b></td>
                                            <td><i>@item.BrandDesc</i></td>
                                            <td>@DateTime.Now</td>
                                            <td><button class="btn text-primary custombutton" asp-route-id="@item.BrandId"><i class="bi bi-pencil-square"></i></button></td>
                                            <td><button class="text-danger btn custombutton" asp-route-id="@item.BrandId"><i class="bi bi-trash3"></i></button></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>