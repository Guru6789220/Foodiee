@model ProductsDTO;

<style>
    .flex-container{
        flex-direction:column;
        display:flex;
        padding: 0px;
    }

    .flex-items{
        border-top:1px solid gray;
        border-left: 1px solid gray;
        border-right: 1px solid gray;
        width:90%;
        height:60px;
    }
    .flex-items:last-child{
        border-bottom:1px solid gray;
    }

    .ImgStyle{
        width:100%;
        height:100%;
        padding:2px;
    }
</style>



<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5>Add New Product</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3 text-end">
                    <label asp-for="CategoryId" class="form-label"></label><em class="text-danger"> * </em>:
                </div>
                <div class="col-lg-3">
                    <select asp-items="@ViewBag.Category" class="form-control">
                        <option vlaue="-1">--Select--</option>
                    </select>
                </div>
                <div class="col-lg-1 text-end">
                    <label asp-for="BrandId" class="form-label"></label><em class="text-danger"> * </em>:
                </div>
                <div class="col-lg-3">
                    <select asp-items="@ViewBag.Brand" class="form-control">
                        <option vlaue="-1">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="row mt-2">
                        <div class="col-lg-6 text-end">
                            <label class="form-label" asp-for="ProductName"></label><em class="text-danger"> * </em>:
                        </div>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" asp-for="ProductName" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-6 text-end">
                            <label class="form-label" asp-for="ProductCode"></label><em class="text-danger"> * </em>:
                        </div>
                        <div class="col-lg-6">
                            <input class="form-control" asp-for="ProductCode" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-6 text-end">
                            <label class="form-label" asp-for="BasePrice"></label><em class="text-danger"> * </em>:
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="BasePrice" class="form-control" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-lg-6 text-end">
                            <label class="form-label " asp-for="ProductImage"></label><em class="text-danger"> * </em>:
                        </div>
                        <div class="col-lg-6">
                            <input type="file"  class="form-control" accept=".png,.jpg,.jpeg" multiple="4"/>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row mt-1">
                        <div class="col-lg-5 px-2 col-8" style="height:180px;">
                            <img class="displayImage" src="" alt="not found" style="height:100%;width:100%;border:1px solid white;border-radius:10px;" />
                        </div>
                        <div class="col-lg-2 col-2 flex-container">
                            <div class="flex-items">
                                <img class="ImgStyle hover-img" src="https://images.pexels.com/photos/674010/pexels-photo-674010.jpeg?auto=compress&cs=tinysrgb&w=600" alt="notfound" id="img2" />
                            </div>
                            <div class="flex-items">
                                <img class="ImgStyle hover-img" src="https://images.pexels.com/photos/1133957/pexels-photo-1133957.jpeg?auto=compress&cs=tinysrgb&w=600" alt="not found" id="img3" />
                            </div>
                            <div class="flex-items">
                                <img class="ImgStyle hover-img" src="https://images.pexels.com/photos/133472/pexels-photo-133472.jpeg?auto=compress&cs=tinysrgb&w=600" alt="not found" id="img4" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-2 flex-container">
                            <div class="flex-items">
                                <img class="ImgStyle hover-img" src="https://images.pexels.com/photos/110686/pexels-photo-110686.jpeg?auto=compress&cs=tinysrgb&w=600" alt="notfound" id="img2" />
                            </div>
                            <div class="flex-items">
                                <img class="ImgStyle hover-img" src="https://images.pexels.com/photos/265216/pexels-photo-265216.jpeg?auto=compress&cs=tinysrgb&w=600" alt="not found" id="img3" />
                            </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-lg-3 text-end">
                    <label asp-for="ProductDesc" class="form-label"></label><em class="text-danger"> * </em>:
                </div>
                <div class="col-lg-7">
                    <textarea asp-for="ProductDesc" class="form-control"></textarea>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-lg-3 text-end">
                    <label asp-for="IsAvaliable" class="form-label"></label><em class="text-danger"> * </em>:
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
       
        $('.hover-img').on('mouseover', function () {
            const displayImage = $('.displayImage'); // Correct ID
            var srcValue = $(this).attr('src'); // Get the src of the hovered image
            displayImage.attr("src", srcValue).show(); // Set the src and show the display image
        });

        $('.hover-img').on('mouseout', function () {
            $('#displayImage').hide(); 
        });
    });
</script>
