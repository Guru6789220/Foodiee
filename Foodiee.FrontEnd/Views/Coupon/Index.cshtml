@model List<CouponDTO>

<div class="container-fluid">
    <div class="card">
        <div class="card-header text-center">
            <div class="row">
                <div class="col-lg-10">
                    <h3 class="display-3" style="font-size:22px;font-weight:550;">List Of Coupons</h3>
                </div>
                <div class="col-lg-2">
                    <a asp-action="NewCoupon" class="btn btn-secondary"><i class="bi bi-plus-circle">&nbsp;Create New</i></a>
                </div>
            </div>
           
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    @if(Model.Count>0)
                    {
                    <table class="table table-responsive-lg table-bordered text-center">
                        <thead class="table-dark">
                        <th>Coupon Code</th>
                        <th>Minium Amount</th>
                        <th>Discount Percentage</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Created BY</th>
                        <th></th>
                        </thead>
                        <tbody>
                            @foreach(var items in Model)
                            {
                              <tr>
                                  <td >@items.CouponCode</td>
                                  <td>@items.MiniumAmount</td>
                                  <td>@items.DiscountPerce</td>
                                  <td>@items.StartDate</td>
                                  <td>@items.EndDate</td>
                                  <td>@items.CreatedBy</td>
                                  <td>

                                            <a class="btn btn-danger delete" asp-route-CouponCode="@items.CouponCode" asp-action="Delete"><i class="bi bi-trash3" style="font-size:17px;font-weight:550;"></i></a>
                                  </td>
                              </tr>  
                            }
                        </tbody>
                    </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


