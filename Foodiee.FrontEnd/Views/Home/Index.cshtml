@{
    ViewData["Title"] = "Home Page";
}
<style type="text/css">
    .customheader{
        /* background: linear-gradient(to left, #833ab4, #fd1d1d, #fcb045); */
        background: linear-gradient(to left, #e9d362, #333333);
        height:40px;
        border-radius:5px;
        border:0px !important;
    }

    .customfooter{
        height:35px;
        position:absolute;
        bottom:0;
        color:white;
        font-weight:600;
    }

    .NewImages{
        width:97%;
        height:96%;
        margin: 3px; /* Space around the image */
        object-fit: cover; /* Ensure the image covers the area */
        border-radius:10px;
    }

    .card-body{
        overflow:hidden;
        background:transparent;
        border:1px;
    }
    .gradient-text{
      /*   background: linear-gradient(to right, #8e0e00, #1f1c18); */
        background-clip:text;
        color:white;
        font-weight:600;
    }

    .header {
        background:transparent;
    }
    .card{
        border:0px;
    }

    .Heading{
        font-size:20px;
        font-weight: 600;
        background: linear-gradient(to right, #ff4b1f, #1fddff);
        background-clip:text;
        color:transparent;

    }

    .carousel {
        pointer-events: none;
    }
    </style>

